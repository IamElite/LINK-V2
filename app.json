{
    "name": "Links-Share-Bot-v2",
    "description": "Advanced Telegram Links Sharing Bot",
    "keywords": [
        "telegram",
        "bot",
        "links",
        "share"
    ],
    "stack": "heroku-22",
    "formation": {
        "worker": {
            "quantity": 1,
            "size": "standard-2x"
        }
    },
    "env": {
        "BOT_TOKEN": {
            "description": "Telegram Bot Token from @BotFather",
            "required": true
        },
        "DB_URI": {
            "description": "MongoDB Connection URI",
            "required": true
        },
        "UPSTREAM_REPO": {
            "description": "Repo URL for updates",
            "value": "https://github.com/IamElite/LINK-V2",
            "required": false
        },
        "UPSTREAM_BRANCH": {
            "description": "Branch for updates",
            "value": "main",
            "required": false
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
}
